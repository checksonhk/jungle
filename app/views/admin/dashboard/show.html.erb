<h1>Admin Dashboard</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Product Count</h3>
      </div>
      <div class="panel-body">
        <%= @product_count %>
      </div>
      <div class="panel-footer">
        <%= link_to 'All Products', [:admin, :products], class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Category Count</h3>
      </div>
      <div class="panel-body">
        <%= @category_count %>
      </div>
        <div class="panel-footer">
          <%= link_to 'All Categories', [:admin, :products], class: 'btn btn-default' %>
        </div>
    </div>
</div>
